<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gramian.androidtest" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".androidtest.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".androidtest.app.DisplaySearchResultsActivity"
            android:label="@string/title_activity_display_search_results"
            android:parentActivityName=".androidtest.app.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".androidtest.app.MainActivity" />
        </activity>
        <activity
            android:name=".androidtest.app.RedditApiSearchActivity"
            android:label="@string/title_activity_reddit_api_search"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".androidtest.app.CollapsingToolbarActivity"
            android:label="@string/title_activity_collapsing_toolbar"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
